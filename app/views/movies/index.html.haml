-#  This file is app/views/movies/index.html.haml

%h1 All Movies

= form_tag movies_path, :method => :get do
  Include:
  - @all_ratings.each do |rating|
    = rating
    = check_box_tag "ratings[#{rating}]", 1, @user_selected_ratings[rating], :id => "ratings_#{rating}"
  %input{:type => "hidden", :name => "sort_col", :value => @sort_col}
  = submit_tag 'Refresh', :id => 'ratings_submit'

%table#movies
  %thead
    %tr
      %th{:class => (@sort_col == "title") ? "hilite" : ""}= link_to "Movie Title", movies_path(:sort_col => "title", :ratings => @user_selected_ratings), :id => 'title_header'
      %th Rating
      %th{:class => (@sort_col == "release_date") ? "hilite" : ""}= link_to "Release Date", movies_path(:sort_col => "release_date", :ratings => @user_selected_ratings), :id=> 'release_date_header'
      %th More Info
  %tbody
    - @movies.each do |movie|
      %tr
        %td= movie.title 
        %td= movie.rating
        %td= movie.release_date
        %td= link_to "More about #{movie.title}", movie_path(movie)

= link_to 'Add new movie', new_movie_path
